{% extends 'base.html.twig' %}


{% block body %}

	<div class="container my-4">
		<h1>Liste des Utilisateurs
		</h1>
		<div class="text-end">
			<a href="{{path('backoffice_user_add')}}" class="btn btn-success">
				<i class="fas fa-plus-circle"></i>
				Ajouter</a>
		</div>
		{{ include('_partials/_flash_messages.html.twig') }}

		<table class="table table-hover mt-4">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Pseudo</th>
					<th scope="col">Email</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}

					<tr>
						<th scope="row">{{user.id}}</th>
						<td>{{user.pseudo}}</td>
						<td>{{user.email}}</td>
						<td class="text-right">
							<a href="{{path('backoffice_user_read', {id: user.id})}}" class="btn btn-md btn-success">
								<i class="far fa-eye"></i>
							</a>
							<a href="{{path('backoffice_user_edit', {id: user.id})}}" class="btn btn-md btn-warning">
								<i class="fa fa-pencil-square-o" aria-hidden="true"></i>
							</a>


							<div class="btn-group" role="group">
								<button id="btnGroupDrop1" type="button" class="btn btn-md btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
									<i class="fa fa-trash-o" aria-hidden="true"></i>

								</button>
								<ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
										<a class="dropdown-item" href="{{ url('backoffice_user_delete', {"id": user.id}) }}">Oui, je veux supprimer !</a>
									</li>
									<li>
										<a class="dropdown-item" href="#">Oups ...</a>
									</li>
								</ul>
							</div>
						</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>
	</div>

{% endblock %}
